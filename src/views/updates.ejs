<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        .update-container {
            padding: 15px;
            text-align: center;
        }

        .update-container label {
            display: block;

        }

        .btn-save {
            margin-top: 15px;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="update-container">
    <%= JSON.stringify(dataUser) %>
    <form action="/updateUser" method="POST">
        <div>
            <label>FirstName</label>
            <input name="firstName" value="<%= dataUser.firstName %>"/>
        </div>
        <div>
            <label>LastName</label>
            <input name="lastName" value="<%= dataUser.lastName %>"/>
        </div>
        <div>
            <label>email</label>
            <input name="email" value="<%= dataUser.email %>"/>
        </div>
        <div>
            <label>Address</label>
            <input name="adress" value="<%= dataUser.adress %>"/>
        </div>
        <input type="text" hidden name="id" value="<%= dataUser.id %>"/>
        <div>
            <button type="submit" class="btn-save">Save</button>
        </div>
    </form>
</div>
</body>
</html>